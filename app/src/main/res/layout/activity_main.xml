<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeDreawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                search bar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="4dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/homeIconShowSideNav"
                                android:layout_width="30dp"
                                android:layout_height="30dp"

                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"

                                android:src="@drawable/line" />

                            <EditText
                                android:id="@+id/btnSercingCityName"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="80dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/hint"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:textColorHint="?attr/colorControlNormal"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/searchIV"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="330dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/searchblack" />

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp" />

                    <TextView
                        android:id="@+id/btnSeeAllRecentFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="See All"
                        android:textColor="@color/skyBlue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewHome"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    tools:listitem="@layout/home_recent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Categories"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <!--        Types of file of Files -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <!--             image & download-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!--                CardView Download-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnDownload"
                            android:layout_width="180dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:id="@+id/homeIconsDownload"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="15dp"
                                    android:padding="15dp"
                                    android:src="@drawable/download" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Downloads"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvDloadFileSize"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="1.5 GB"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnShowGallery"
                            android:layout_width="180dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:id="@+id/homeIconsImage"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:padding="15dp"
                                    android:src="@drawable/img" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Images"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvImageFileSize"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="100.45 MB"
                                        android:textSize="12sp" />


                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <!--            video & audio-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnShowVideo"
                            android:layout_width="180dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:id="@+id/homeIconsVideo"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:padding="15dp"
                                    android:src="@drawable/videoicons" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="15dp"
                                    android:gravity="center|start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Videos"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvVideoFileSize"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="100.64 GB"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnShowAudioFile"
                            android:layout_width="180dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:id="@+id/homeIconAudio"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:padding="15dp"
                                    android:src="@drawable/musicicons" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="15dp"
                                    android:gravity="center|start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|start"
                                        android:text="Audio"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvAudioFileSize"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|start"
                                        android:text="100.56 MB "
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!--                        Pdf && Recent Files-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnShowDocument"
                            android:layout_width="180dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:id="@+id/homeIconDoc"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:padding="15dp"
                                    android:src="@drawable/pdficons" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:gravity="center|start"
                                        android:text="Documents"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvDocFileSize"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:gravity="center|start"
                                        android:text="500.76 GB"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnCVApps"
                            android:layout_width="180dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:id="@+id/homeIconApps"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    android:src="@drawable/filebackup" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Apps"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Access required"
                                        android:textSize="12sp" />


                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Collections"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="200dp"
                        android:src="@drawable/dots" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnShowStarred"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/homeIconStarred"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:padding="15dp"
                                android:src="@drawable/star" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Starred"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <!--                CardView Download-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnSafe"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/homeIconSafeFolder"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:padding="15dp"
                                android:src="@drawable/lock" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="Safe folder"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!--   internal Storage -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewInternalStorage"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/homeIconInternalStorage"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:src="@drawable/database" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="Internal Storage"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewMemoryCardStorage"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/homeIconSDCard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:src="@drawable/media" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="SD CARD"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/home_nav_DL"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />


</androidx.drawerlayout.widget.DrawerLayout>