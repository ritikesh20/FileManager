<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="4dp"
        android:text="Header"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="9dp"

        android:gravity="center|start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:backgroundTint="@android:color/white"
            app:cardCornerRadius="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/file_icon_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/folderg" />

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/btnFileType"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/share" />

            </FrameLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/file_icon_image"
                android:maxLines="1"
                tools:text="Documents" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/favIcon"
                    android:layout_width="10dp"
                    android:visibility="gone"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@color/black" />

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200 KB" />

                <TextView
                    android:id="@+id/tvModifierData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="15-May-2024" />


            </LinearLayout>

        </LinearLayout>

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/btnFileDetails"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>


</LinearLayout>