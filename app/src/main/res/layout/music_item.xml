<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/musicIcons"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/musicicon"
                        tools:src="@drawable/musicicons" />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/iconMusicVideo"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="30dp"
                        android:visibility="gone" />
                </FrameLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMusicName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    tools:text="Music name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMusicModifierData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/_15_may_2024" />

                    <TextView
                        android:id="@+id/tvMusicSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/_200_kb" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnMusicDot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/dots" />


        </LinearLayout>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="75dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>